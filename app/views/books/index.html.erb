 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        
          <td><%= link_to book_path(book.id) do %>
            <%= image_tag book.get_image %>
            <% end %>
            </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        
      </tr>
    <% end %>
  
  
  </tbody>
</table>