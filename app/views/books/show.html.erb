<table class='table table-hover table-inverse'>
  <tbody>
      <tr>
        
          <td><%= link_to book_path(@book.id) do %>
            <%= image_tag @book.get_image %>
            <p>ユーザーネーム：<%= @book.user.name %></p>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "削除", book_path(@book), method: :delete %></td>
        <% end %>
      </tr>
  
  
  </tbody>
</table>
